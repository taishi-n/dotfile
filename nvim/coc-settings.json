{
  "coc.preferences.formatOnSaveFiletypes": ["python", "cpp", "css", "markdown"],
  "suggest.snippetIndicator": "►",
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "diagnostic.warningSign": "⚠",
  "diagnostic.errorSign": "☣",
  "codeLens.enable": true,

  "list.insertMappings": {
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  },

  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "119"],
  "python.linting.pydocstyleEnabled": true,
  "python.sortImports.path": "isort",
  "pyright.organizeimports.provider": "isort",

  "latex.build.args": ["-r latexmkrc"],

  "eslint.autoFixOnSave": true,

  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    }
  }
}
